<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.iae.ConfigDetailsController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>



    <Label text="Configuration Details" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

    <GridPane hgap="10" vgap="5">
        <Label text="Language:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="languageLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Compiler Path:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="compilerPathLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Compiler Args:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="compilerArgsLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Run Command:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="runCommandLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Expected Output:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="expectedOutputLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Student Results" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
    <TableView fx:id="resultsTable" prefHeight="300" prefWidth="700">
        <columns>
            <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="150"/>
            <TableColumn fx:id="outputColumn" text="Output" prefWidth="200"/>
            <TableColumn fx:id="expectedColumn" text="Expected Output" prefWidth="200"/>
            <TableColumn fx:id="resultColumn" text="Result" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Close" onAction="#handleClose"/>
</VBox>
